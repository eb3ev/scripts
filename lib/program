#!/bin/sh

installed() {
    if [ -n "$(command -v "$1")" ]
    then
        echo "true"
    else
        echo "false"
    fi
}

sync_program_file() {
    IFS=:
    if stest -dqr -n "$1" $PATH
    then
        stest -flx $PATH | sort -u > "$1"
    fi
    unset IFS
}

mkfile() {
    if [ -e "$1" ]
    then
        mkdir -p "${1%/*}" && touch "$1"
    fi
}

