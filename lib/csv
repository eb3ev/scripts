. "${SCRIPTS_DIR:-${0%/*}/..}/scriptsrc"
. "$lib/lines"
. "$lib/args"

keys() {
    use_pipe="false"
    delim=" ; "
    pattern='!/^ *#/ && NF {print $1}'

    file=""
    list=""

    for arg in "$@"
    do
        case "$arg" in
            "--delim="*) delim=$(get_arg_value "--delim=" "$arg") ;;
            "--pattern="*) pattern=$(get_arg_value "--pattern=" "$arg") ;;
            "--file="*) file=$(get_arg_value "--file=" "$arg") ;;
            "--use-pipe") use_pipe="true" ;;
            *) list="$arg" ;;
        esac
    done

    if [ "$use_pipe" = "true" ]
    then
        awk -F "$delim" "$pattern"
    elif [ -r "$file" ]
    then
        awk -F "$delim" "$pattern" "$file"
    else
        echo "$list" | awk -F "$delim" "$pattern"
    fi
}

value() {
    use_pipe="false"
    delim=" ; "
    index=2

    file=""
    list=""

    for arg in "$@"
    do
        case "$arg" in
            "--delim="*) delim=$(get_arg_value "--delim=" "$arg") ;;
            "--index="*)
                new_index=$(get_arg_value "--delim=" "$arg")

                if [ "$new_index" -ge 1 2>/dev/null ]
                then
                    index=$new_index
                fi
                ;;
            "--file="*) file=$(get_arg_value "--file=" "$arg") ;;
            "--key="*) key=$(get_arg_value "--key=" "$arg") ;;
            "--use-pipe") use_pipe="true" ;;
            *) list="$arg" ;;
        esac
    done

    key=$(enc --awk-regex "$key")

    if [ "$use_pipe" = "true" ]
    then
        awk -F "$delim" "/^$key$delim/ {print \$$index}"
    elif [ -r "$file" ]
    then
        awk -F "$delim" "/^$key$delim/ {print \$$index}" "$file"
    else
        echo "$list" | awk -F "$delim" "/^$key$delim/ {print \$$index}"
    fi
}

get_column() {
    use_pipe="false"
    delim=" ; "
    index=1

    file=""
    list=""

    for arg in "$@"
    do
        case "$arg" in
            "--delim="*) delim=$(get_arg_value "--delim=" "$arg") ;;
            "--index="*)
                new_index=$(get_arg_value "--delim=" "$arg")

                if [ "$new_index" -ge 1 2>/dev/null ]
                then
                    index=$new_index
                fi
                ;;
            "--file="*) file=$(get_arg_value "--file=" "$arg") ;;
            "--use-pipe") use_pipe="true" ;;
            *) list="$arg" ;;
        esac
    done

    if [ "$use_pipe" = "true" ]
    then
        awk -F "$delim" "{print \$$index}" "$2"
    elif [ -r "$file" ]
    then
        awk -F "$delim" "{print \$$index}" "$file"
    else
        echo "$list" | awk -F "$delim" "{print \$$index}"
    fi
}

get_row() {
    use_pipe="false"
    delim=" ; "
    index=1

    file=""
    list=""

    for arg in "$@"
    do
        case "$arg" in
            "--delim="*) delim=$(get_arg_value "--delim=" "$arg") ;;
            "--index="*)
                new_index=$(get_arg_value "--delim=" "$arg")

                if [ "$new_index" -ge 1 2>/dev/null ]
                then
                    index=$new_index
                fi
                ;;
            "--file="*) file=$(get_arg_value "--file=" "$arg") ;;
            "--use-pipe") use_pipe="true" ;;
            *) list="$arg" ;;
        esac
    done

    if [ "$use_pipe" = "true" ]
    then
        sed -n "$index p"
    elif [ -r "$file" ]
    then
        sed -n "$index p" "$file"
    else
        echo "$list" | sed -n "$index p"
    fi
}

