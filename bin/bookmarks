#!/bin/sh

. "${SCRIPTS_DIR:-$HOME/scripts}/scriptsrc"
. "$lib/var/config"
. "$lib/var/cache"
. "$lib/csv"
. "$lib/clipboard"

copy="false"
use_history="false"
use_groups="false"
browser_cmd="xdg-open"

get_bookmarks() {
    keys "$bookmarks"
}

get_bookmark_groups() {
    ls -F1 "$bookmark_groups" | awk '!/\*$|\/$/'
}

get_bookmark() {
    get_bookmarks | menu 2 ""
}

get_bookmark_history() {
    if [ ! -e "$bookmark_history" ]
    then
        get_bookmarks > "$bookmark_history"
    fi

    sync_file_list "$bookmark_history" "$(get_bookmarks)"

    menu 2 "" < "$bookmark_history"
}

get_url() {
    value "$1" "$bookmarks"
}

get_group_urls() {
    cat "$bookmark_groups/$1" 2>/dev/null
}

open_bookmark() {
    if [ -n "$1" ]
    then
        $browser_cmd "$1"
    fi
}

open_bookmark_group() {
    urls=$(get_group_urls "$1")

    for url in $urls
    do
        open_bookmark "$url"
    done
}

copy_bookmark() {
    if [ -n "$1" ]
    then
        set_clipboard "$1"
        notify-send "Copied" "$1"
    fi
}

args=""

for arg in "$@"
do
    case "$arg" in
        "--copy") copy="true" ;;
        "--use-history") use_history="true" ;;
        "--use-groups") use_groups="true" ;;
        *) browser_cmd="$arg" ;;
    esac
done

if [ "$use_groups" = "true" ]
then
    bookmark_key=$(get_bookmark_groups | menu 2 "Groups")

    if [ "$copy" = "true" ]
    then
        copy_bookmark "$(get_group_urls "$bookmark_key")"
    else
        open_bookmark_group "$bookmark_key"
    fi
else
    if [ "$use_history" = true ]
    then
        bookmark_key=$(get_bookmark_history)
    else
        bookmark_key=$(get_bookmark)
    fi

    if [ "$copy" = "true" ]
    then
        copy_bookmark "$(get_url "$bookmark_key")"
    else
        if [ "$use_history" = "true" ]
        then
            to_top "$bookmark_key" "$bookmark_history"
        fi

        open_bookmark "$(get_url "$bookmark_key")"
    fi
fi

