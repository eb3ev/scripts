#!/bin/sh

. "${SCRIPTS_DIR:-${0%/*}/..}/scriptsrc"
. "$lib/var/config"
. "$lib/files"

opts="\
top_window
center_window
bottom_window
term
term_window"

arg_check() {
    if echo "$opts" | grep -Fqx -- "$1"
    then
        echo "true"
    else
        echo "false"
    fi
}

opt="${1:-$(echo "$opts" | menu 2 "Profiles")}"

if [ "$(arg_check "$opt")" = "true" ]
then
    set_value "$opt" "$menurc"
fi

