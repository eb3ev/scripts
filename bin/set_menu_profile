#!/bin/sh

. "$SCRIPTS_HOME/scriptsrc"
. "$lib/var/config"
. "$lib/files"

opts="\
top_window
center_window
bottom_window
term
term_window"

arg_check() {
    echo "$opts" | grep -Fqx -- "$1" && return 0 || return 1
}

opt="${1:-$(echo "$opts" | menu -m --prompt="Profiles")}"

if arg_check "$opt"
then
    set_value "$opt" "$menurc"
fi

