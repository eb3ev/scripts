#!/bin/sh

. "${SCRIPTS_DIR:-${0%/*}/..}/scriptsrc"
. "$lib/var/config"
. "$lib/files"

opts=$(echo -e "top_window\ncenter_window\nbottom_window\nterm\nterm_window")

arg_check() {
    if [ -n "$(echo "$opts" | grep -Fx -- "$1")" ]
    then
        echo "true"
    else
        echo "false"
    fi
}

opt="${1:-$(echo "$opts" | menu 2 "Profiles")}"

if [ "$(arg_check "$opt")" = "true" ]
then
    set_value "$opt" "$menurc"
fi

