#!/bin/sh

. "${SCRIPTS_DIR:-$HOME/scripts}/scriptsrc"
. "$lib/var/config"
. "$lib/files"

arg="$1"

arg_check () {
    case "$1" in
        "top_window"|"center_window"|"bottom_window"|"term"|"term_window")
            echo "true"
            ;;
        *)
            echo "Invalid Option: $1"
    esac
}

if [ "$(arg_check "$1")" = "true" ]
then
    set_value "$arg" "$menurc"
fi

