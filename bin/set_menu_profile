#!/bin/sh

. "${SCRIPTS_DIR:-$HOME/scripts}/scriptsrc"
. "$lib/var/config"

arg_check () {
    case "$1" in
        "top_window"|"center_window"|"bottom_window"|"term"|"term_window")
            echo "true"
            ;;
        *)
            echo "Invalid Option: $1"
    esac
}

if [ "$(arg_check "$1")" = "true" ]
then
    if [ -s "$menurc" ]
    then
        sed -i '1,$d' "$menurc"
    fi

    echo "$arg" >> "$menurc"
fi

