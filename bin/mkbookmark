#!/bin/sh

. "$SCRIPTS_HOME/scriptsrc"
. "$lib/var/config"
. "$lib/clipboard"

clipboard=$(get_clipboard)

if [ -n "$(filter --url "$clipboard")" ]
then
    bookmark_name=$(printf "" | override_menu='bottom_window' menu --custom="-l 0" --prompt="Name ($clipboard)")

    if [ -n "$bookmark_name" ]
    then
        echo "$bookmark_name ; $clipboard" >> "$bookmarks"

        notify-send "New bookmark" "$bookmark_name ($clipboard)"
    fi
else
    notify-send "Invalid URL" "$clipboard"
fi
