#!/bin/sh

. "$SCRIPTS_HOME/scriptsrc"
. "$lib/lines"
. "$lib/args"
. "$lib/archives"

args=""

for arg in "$@"
do
    case $arg in
        --dir=*) 
            arg_value=$(get_arg_value "--dir=" "$arg")
            if [ -d "$arg_value" ]; then
                args=$(list_add "$args" "$arg")
            else
                mkdir -p "$arg_value" 2>/dev/null

                if [ -d "$arg_value" ]; then
                    args=$(list_add "$args" "$arg")
                fi
            fi
            ;;
        *)
            if [ -f "$arg" ]; then
                args=$(list_add "$args" "$arg")
            fi
            ;;
    esac
done

IFS="
"
extract $args
unset IFS

