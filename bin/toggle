#!/bin/sh

. "${SCRIPTS_DIR:-${0%/*}/..}/scriptsrc"
. "$lib/program"

toggle() {
    if [ -z "$(pgrep -x "$1")" ]
    then
        notify-send "$1" "On" &
        eval "$1 $2"
    else
        killall "$1" && notify-send "$1" "Off"
    fi
}

program="${1:-$(exec_program --print-cmd --promt="Toggle")}"

if [ "$(installed "$program")" = "true" ]
then
    toggle "$program" "$2"
fi

