#!/bin/sh

. "$SCRIPTS_HOME/scriptsrc"
. "$lib/clipboard"

get_hex_value() {
    echo "${1##*| }" | sed 's/Hex: //g'
}

get_rgb_value() {
    echo "${1% |*}" | sed 's/ //g;s/,/  /g'
}

color=$(colorpicker --one-shot 2>/dev/null)

if [ "$color" ]; then
    hex=$(get_hex_value "$color")
    rgb=$(get_rgb_value "$color")

    notify-send "Color" "$hex  ï‘„  $rgb"

    set_clipboard "$hex"
fi

