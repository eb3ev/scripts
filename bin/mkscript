#!/bin/sh

create_script_file() {
    if [ ! -e "$1" ]
    then
        echo '#!/bin/sh' > "$1"
        chmod +x "$1"
    fi
}

if [ $# -gt 0 ]
then
    for file in "$@"
    do
        create_script_file "$file"
    done
else
    printf "Filename: "

    read fname
    
    create_script_file "$fname"
fi

