#!/bin/sh

. "${SCRIPTS_DIR:-${0%/*}/..}/scriptsrc"
. "$lib/csv"
. "$lib/clipboard"

emoji_key=$(keys "$lib/data/emojis" "" "!/^ *#/ && NF" | menu 3 "Emojis")

if [ -n "$emoji_key" ]
then
    emoji=$(get_column "1" "$emoji_key" " ")

    set_clipboard "$emoji"

    notify-send "Copied" "$emoji"
fi

