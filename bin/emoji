#!/bin/sh

. "${SCRIPTS_DIR:-$HOME/scripts}/scriptsrc"
. "$lib/key_value"

emoji_key=$(keys "$lib/data/emojis" "" "!/^ *#/ && NF" | menu 3 "Emojis")

if [ -n "$emoji_key" ]
then
    emoji=$(echo "$emoji_key" | get_column " " "1")

    echo "$emoji" | xclip -selection clipboard

    notify-send "Copied" "$emoji"
fi

