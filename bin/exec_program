#!/bin/sh

. "${SCRIPTS_DIR:-$HOME/scripts}/scriptsrc"
. "$lib/var/config"
. "$lib/var/cache"
. "$lib/lines"

run="true"
require_sudo="false"
use_history="false"

get_program_history() {
    if [ ! -e "$program_history" ]
    then
        cp "$programs" "$program_history"
    fi

    sync_file_file "$program_history" "$programs"

    cat "$program_history" 2>/dev/null
}

IFS=:
if stest -dqr -n "$programs" $PATH
then
    stest -flx $PATH | sort -u > "$programs"
fi
unset IFS

for arg in "$@"
do
    case "$arg" in
        "--sudo") require_sudo="true" ;;
        "--use-history") use_history="true" ;;
        "--print-cmd") run="false" ;;
    esac
done

if [ "$use_history" = "true" ]
then
    program_list=$(get_program_history)
else
    program_list=$(< "$programs")
fi

if [ "$require_sudo" = "true" ]
then
    program=$(echo "$program_list" | menu 4 "Launch")
else
    program=$(echo "$program_list" | menu 2 "Launch")
fi

if [ -n "$program" ]
then
    if [ "$use_history" = "true" ]
    then
        to_top "$program" "$program_history"
    fi

    if [ "$require_sudo" = "true" ]
    then
        if [ "$run" = "true" ]
        then
            SUDO_ASKPASS="$bin/passwd_prompt" sudo -A $program
        else
            echo "SUDO_ASKPASS="$bin/passwd_prompt" sudo -A $program"
        fi
    else
        if [ "$run" = "true" ]
        then
            $program
        else
            echo "$program"
        fi
    fi
fi

