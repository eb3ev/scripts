#!/bin/sh

. "${SCRIPTS_DIR:-${0%/*}/..}/scriptsrc"
. "$lib/program"

restart_program() {
    if [ "$(installed "$1")" = "true" ]
    then
        killall "$1" 2>/dev/null && eval "$1" &
    fi
}

if [ $# -gt 0 ]
then
    for arg in "$@"
    do
        restart_program "$arg"
    done
else
    program=$(exec_program --print-cmd --prompt="Restart")

    if [ -n "$program" ]
    then
        restart_program "$program"
    fi
fi

