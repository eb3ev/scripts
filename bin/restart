#!/bin/sh

. "$SCRIPTS_HOME/scriptsrc"
. "$lib/program"

restart_program() {
    installed "$1" || return

    if [ ! "$(pgrep -x "$1")" ]; then
        eval "$1" &
    else
        killall -s SIGKILL "$1" && sleep 1 && eval "$1" &
    fi

    notify-send "Restarted" "$1" 2>/dev/null

}

if [ $# -gt 0 ]; then
    for arg in "$@"; do
        restart_program "$arg"
    done
else
    program=$(exec_program --print-cmd --prompt="Restart")

    if [ "$program" ]; then
        restart_program "$program"
    fi
fi

