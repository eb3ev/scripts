#!/bin/sh

. "${SCRIPTS_DIR:-${0%/*}/..}/scriptsrc"
. "$lib/var/config"
. "$lib/var/cache"
. "$lib/csv"
. "$lib/lines"

use_history="false"

create_histfile() {
    if [ -e "$search_history" ]
    then
        histsize="${search_histsize:-1000}"
        sed -i "$histsize,\$d" "$search_history"
    else
        echo > "$search_history"
    fi
    echo "true"
} 

for arg in "$@"
do
    case "$arg" in
        "--use-history") use_history="true" ;;
        *) browser_cmd="$arg" ;;
    esac
done

search_engine_key=$(keys --file="$search_engines" | menu 2 "ï€‚")

if [ -n "$search_engine_key" ]
then
    if [ "$use_history" = "true" ]
    then
        if [ "$(create_histfile)" = "true" ]
        then
            query=$(menu 1 "$search_engine_key" < "$search_history")
        fi
    else
        query=$(printf "" | menu 1 "$search_engine_key")
    fi

    if [ -n "$query" ]
    then
        if [ "$use_history" = "true" ]
        then
            to_top "$query" --file="$search_history"
        fi

        query=$(enc --html "$query")

        ${browser_cmd:-xdg-open} "$(value "$search_engine_key" --file="$search_engines")$query"
    fi
fi

