#!/bin/sh

. "$SCRIPTS_HOME/scriptsrc"
. "$lib/var/config"

if [ ! $# -eq 0 ]; then
    require_sudo=false
    for arg in "$@"; do
        if [ "$arg" = "--sudo" ]; then
            require_sudo=true
        else
            if [ "$require_sudo" = true ]; then
                term_exec "$sudo_editor '$arg'; read hello" &
            else
                term_exec "${EDITOR:-$editor} '$arg'" &
            fi
        fi
    done
else
    term_exec "${EDITOR:-$editor}"
fi

