#!/bin/sh

. "$SCRIPTS_HOME/scriptsrc"
. "$lib/pulse_audio"

sinks=$(get_sinks --exclude-default)

if [ -z "$sinks" ]
then
    notify-send "Alert" "No alternative outputs"
    exit 0
fi

sink=$(get_sink_names "$sinks" | menu -m --prompt="Output")

if [ -n "$sink" ]
then
    set_def_sink "$(get_sink_id "$sink" "$sinks")"
fi

