#!/bin/sh

. "${SCRIPTS_DIR:-${0%/*}/..}/scriptsrc"
. "$lib/pulse_audio"

sinks=$(get_sinks --exclude-default)

if [ -z "$sinks" ]
then
    notify-send "Alert" "No alternative outputs"
    exit 0
fi

sink=$(get_sink_names "$sinks" | menu 2 "Output")

if [ -n "$sink" ]
then
    set_def_sink "$(get_sink_id "$sink" "$sinks")"
fi

