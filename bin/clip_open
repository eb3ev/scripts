#!/bin/sh

. "${SCRIPTS_DIR:-$HOME/scripts}/scriptsrc"
. "$lib/clipboard"

diff_browser="false"
new_tab="false"
new_window="false"

open_url() {
    args=""
    if [ "$diff_browser" = "true" ]
    then
        args="$args --use-diff"
    fi
    if [ "$new_tab" = "true" ]
    then
        args="$args --new-tab"
    fi
    if [ "$new_window" = "true" ]
    then
        args="$args --new-window"
    fi
    browser $args "$1"
}

open_dir() {
    term_fm "$1"
}

open_file() {
    xdg-open "$1"
}

invalid() {
    echo "Invalid: $1"
    notify-send "Invalid" "$1"
}

for arg in "$@"
do
    case "$arg" in
        "--new-tab") new_tab="true" ;;
        "--new-window") new_window="true" ;;
        "--diff-browser") diff_browser="true" ;;
    esac
done

clipboard=$(get_clipboard)

if [ -n "$(filter --url "$clipboard")" ]
then
    type="url"
elif [ -d "$clipboard" ]
then
    type="dir"
elif [ -e "$clipboard" ]
then
    type="file"
else
    type=""
fi

case "$type" in
    "url") open_url "$clipboard" ;;
    "dir") open_dir "$clipboard" ;;
    "file") open_file "$clipboard" ;;
    *) invalid "$clipboard" ;;
esac

