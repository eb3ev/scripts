#!/bin/sh

. "${SCRIPTS_DIR:-$HOME/scripts}/scriptsrc"
. "$lib/var/config"
. "$lib/lines"

find_cmd () {
    vals=""
    if [ -n "$1" ]
    then
        if [ -n "$(command -v fd)" ]
        then
            for dir in "$1"
            do
                vals=$(list_add "$vals" "$(fd . "$(printf "$dir")" -H -I -t f)")
            done
        else
            for dir in "$1"
            do
                vals=(list_add "$vals" "$(find "$(printf "$dir")" -type f)")
            done
        fi
    else
        if [ -n "$(command -v fd)" ]
        then
            vals=$(fd . -H -I -t f)
        else
            vals=$(find . -type f)
        fi
    fi

    echo "$vals"
}

get_file () {
    if [ -n "$1" ]
    then
        find_cmd "$1" | menu 1 "Edit"
    else
        find_cmd | menu 1 "Edit"
    fi
}

edit_file () {
    if [ "$1" = "true" ]
    then
        term_edit "$2"
    else
        $editor "$2"
    fi
}

new_window="false"
directories=""

for arg in "$@"
do
    if [ "$arg" = "--new-window" ]
    then
        new_window="true"
    elif [ -d "$arg" ]
    then
        directories=$(list_add "$directories" "$arg")
    fi
done

file=$(get_file "$directories")

if [ -n "$file" ]
then
    edit_file "$new_window" "$file"
fi

