#!/bin/sh

. "${SCRIPTS_DIR:-$HOME/scripts}/scriptsrc"
. "$lib/var/config"
. "$lib/lines"

use_filter="false"
new_window="false"
require_sudo="false"

find_cmd () {
    if [ -n "$(command -v fd)" ]
    then
        use_fd="true"
    else
        use_fd="false"
    fi

    vals=""

    if [ -n "$1" ]
    then
        for dir in "$1"
        do
            if [ "$use_fd" = "true" ]
            then
                vals=$(list_add "$vals" "$(fd . "$(printf "$dir")" -H -I -t f)")
            else
                vals=$(list_add "$vals" "$(find "$(printf "$dir")" -type f)")
            fi
        done
    else
        if [ "$use_fd" = "true" ]
        then
            vals=$(fd . -H -I -t f)
        else
            vals=$(find . -type f)
        fi
    fi

    echo "$vals"
}

get_file () {
    files=$(find_cmd "$1")

    if [ "$use_filter" = "true" ]
    then
        files=$(echo "$files" | filter --txt-files)
    fi

    echo "$files" | menu 1 "Edit"
}

edit_file () {
    if [ "$new_window" = "true" ]
    then
        if [ "$require_sudo" = "true" ]
        then
            term_edit --sudo "$1"
        else
            term_edit "$1"
        fi
    else
        if [ "$require_sudo" = "true" ]
        then
            $sudo_editor "$1"
        else
            $editor "$1"
        fi
    fi
}

directories=""

for arg in "$@"
do
    case "$arg" in
        "--new-window") new_window="true" ;;
        "--require-sudo") require_sudo="true" ;;
        "--use-filter") use_filter="true" ;;
        *)
            if [ -d "$arg" ]
            then
                directories=$(list_add "$directories" "$arg")
            fi
            ;;
    esac
done

file=$(get_file "$directories")

if [ -n "$file" ]
then
    edit_file $args "$file"
fi

