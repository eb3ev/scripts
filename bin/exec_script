#!/bin/sh

. "${SCRIPTS_DIR:-$HOME/scripts}/scriptsrc"
. "$lib/var/cache"
. "$lib/lines"

scripts_list=$(ls -F1 "$bin" | awk '/\*$/' | sed 's/\*$//g')

if [ ! -e "$scripts_history" ]
then
    echo "$scripts_list" > "$scripts_history"
fi

sync_file_list "$scripts_history" "$scripts_list"

script=$(menu 2 "Run" < "$scripts_history")

if [ -n "$script" ]
then
    prepend_line "$script" "$scripts_history"
    
    $bin/$script
fi

